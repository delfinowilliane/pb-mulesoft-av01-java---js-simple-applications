import java.util.Scanner;

public class CalcularBonus {
	public static Scanner scanner = new Scanner(System.in);
	
	public static void main(String[] args) {
	 
		System.out.println("CADASTRO DE FUNCIONÁRIOS");
		
		System.out.println("Quantidade de funcionários: ");
		int x = scanner.nextInt();
		
		Funcionarios[] funcionario = new Funcionarios[x];

		for(int i=0; i<x; i++) {
			
			funcionario[x] = new Funcionarios();
			
			System.out.println("Nome: ");
			String nome = scanner.nextLine();
			funcionario[i].setNome(nome);
			
			System.out.println("Salario: ");
			double salario = scanner.nextInt();
			funcionario[i].setSalario(salario);
		}
		
		System.out.println("Resultado do calculo do bônus: ");
		
		for (int i=0; i<funcionario.length; i++) {
			
			System.out.println("Funcionário: " + funcionario[x].getNome());
			System.out.println("Funcionário: " + funcionario[x].getSalario());
			funcionario[x].bonificacao();
			System.out.println();
		
		}
	
	}
}
