
public class contador {
	public static void main(String[] args) {
		
		int contador = 1;
		int soma = 0;
		int qtdImpares = 0;
		
		while (contador <= 1000) {
			System.out.println(contador);
			
			if(contador % 2	!= 0) {
			soma = soma + contador;
			qtdImpares++;
			}
			
			contador = contador + 1; //contador++;
		}
		
		System.out.println(soma);
		System.out.println(soma/qtdImpares);
	}
}
